<h1 class="text-center">Eat Da Burger</h1>

<div class="container">

    <div class="row">
        <div class="col-lg-6">
            <ul class="list-unstyled text-left">
                {{#each burgers}}
                <li>
                    {{#unless this.devoured}}
                    {{this.id}}. {{this.burger_name}}
                    <button type="button" class="devour" data-id="{{id}}" data-newdevour="{{devoured}}">
                        EAT!!
                    </button>
                    {{/unless}}        
                </li>
                {{/each}}
            </ul>
        </div>

        <div class="col-lg-6">
             <ul class="list-unstyled text-right">
                {{#each burgers}}
                <li>
                    {{#if this.devoured}}
                    {{this.id}}. {{this.burger_name}}
                    <button type="button" class="undo" data-id="{{id}}" data-newdevour="{{devoured}}">
                        Undo
                    </button>
                    {{/if}} 
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center burger-form">
             <form class="create-form">
                    <div class="form-group">
                        <label for="makeBurger">Add Burger Name</label>
                        <input type="text" class="form-control" id="makeBurger" name="burger_name">
                    </div>
                    <button type="submit" class="btn btn-primary">Make Da Burger</button>
            </form>
        </div>
    </div>
</div>
    

